{% extends 'base.html.twig' %}

{% block title %}Создание статьи{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% if error %}
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        {{ error }}
                    </div>
                </div>
            {% endif %}

            {% if article %}
                <div class="col-12">
                    <div class="alert alert-success" role="alert">
                        Статья успешно создана
                    </div>
                </div>
            {% endif %}

            <div class="col-12">
                <div class="border flex-md-row mb-4 shadow-sm bg-white p-4">
                    <form method="get" class="mb-5">
                        <div class="form-group">
                            <label for="paragraphs">
                                Количество параграфов <span class="text-danger">*</span>
                            </label>
                            <input name="paragraphs" id="paragraphs" required
                                   type="number" class="form-control"
                                   value="{{ app.request.query.get('paragraphs') }}">
                        </div>
                        <div class="form-group">
                            <label for="word">Вставляемое слово</label>
                            <input name="word" id="word" type="text" class="form-control"
                                   value="{{ app.request.query.get('word') }}">
                        </div>
                        <div class="form-group">
                            <label for="wordsCount">Количество повторений вставляемого слова</label>
                            <input name="wordsCount" id="wordsCount"
                                   type="number" class="form-control"
                                   value="{{ app.request.query.get('wordsCount') }}">
                        </div>
                        <button type="submit" class="btn btn-primary">Создать</button>
                    </form>

                    {% if article %}
                        {{ article | cached_markdown }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
