{% extends 'email/base.html.twig' %}

{% block content %}
    <div class="content">
        <table>
            <tr>
                <td>
                    <h1>Новые статьи на сайте!</h1>
                    <p class="lead">За прошедшую неделю на сайте появились следующие статьи.</p>
                </td>
            </tr>
        </table>
    </div>

    {% for article in articles %}
        <div class="content">
            <table>
                <tr>
                    <td class="small post-image" width="20%">
                        <img src="{{ article.imageFilename | imagine_filter('articles_preview') }}" alt=""/>
                    </td>
                    <td>
                        <h3>{{ article.title }} <small>{{ article.author.firstName }}</small></h3>
                        <p class="">{{ article.description }}</p>
                        <a class="btn" href="{{ url('app_article_show', { slug: article.slug }) }}">Читать</a>
                    </td>
                </tr>
            </table>
        </div>
    {% endfor %}
{% endblock %}
