<div class="col-12">
    <div class="border flex-md-row mb-4 shadow-sm bg-white p-4">
        {{ form_start(articleForm) }}

        {% if articleForm.vars.data.imageFilename %}
            <img src="{{ articleForm.vars.data.imageFilename | imagine_filter('articles_preview') }}"
                 height="100" alt="">
        {% endif %}

        {{ form_widget(articleForm) }}
        <button type="submit" class="btn btn-primary">{{ btn_text }}</button>
        {{ form_end(articleForm, {render_rest: false}) }}
    </div>
</div>
