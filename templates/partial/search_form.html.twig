<form>
    <div class="input-group mb-3">
        <input type="text"
               name="q"
               class="form-control"
               placeholder="Найти..."
               value="{{ app.request.query.get('q') }}">
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i>
            </button>
        </div>
    </div>

    <div class="form-group mb-3">
        <label for="perPage">Количество на странице</label>
        <select id="perPage" class="form-control" name="perPage">
            <option value="10" selected>10</option>
            <option value="20" {{ app.request.query.get('perPage') == 20 ? 'selected' : '' }}>20</option>
            <option value="50" {{ app.request.query.get('perPage') == 50 ? 'selected' : '' }}>50</option>
        </select>
    </div>

    {% if hideCheckbox is not defined %}
        <div class="input-group mb-3">
            <div class="form-check">
                <input type="checkbox"
                       name="showDeleted"
                       id="showDeleted"
                       class="form-check-input"
                        {% if app.request.query.has('showDeleted') %} checked {% endif %}>
                <label for="showDeleted" class="form-check-label">Показать удаленные</label>
            </div>
        </div>
    {% endif %}
</form>
